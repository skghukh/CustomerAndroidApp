<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />


        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/driverResponsesView"
            android:layout_width="354dp"
            android:layout_height="356dp"
            android:background="@drawable/src_dst_border"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            app:contentPadding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            card_view:cardCornerRadius="0dp">

            <RelativeLayout
                android:id="@+id/responseLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:visibility="visible">

                <TextView
                    android:id="@+id/messageView"
                    android:layout_marginTop="36dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm your driver" />

                <ListView
                    android:id="@+id/driverResponseList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@+id/requestPickUp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/messageView"
                    android:layout_marginTop="10dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/requestPickUp"
                    android:layout_width="330dp"
                    android:layout_height="42dp"
                    android:background="@color/pickup_button_disabled_background"
                    android:onClick="acceptBid"
                    android:textSize="14sp"
                    android:text="REQUEST PICKUP"
                    android:textColor="@android:color/white"
                    android:layout_above="@+id/driver_response_wait_progressbar"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ProgressBar
                    android:id="@+id/driver_response_wait_progressbar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:progress="1"
                    android:max="45"
                    android:layout_alignEnd="@+id/requestPickUp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignRight="@+id/requestPickUp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/oops_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_horizontal"
                android:layout_gravity="bottom"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/oops"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Oops.."
                    android:textAlignment="center"
                    android:textColor="#1c0113"
                    android:textSize="18sp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/no_fleets"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/oops"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:text="No fleets in the radius"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <Button
                    android:id="@+id/try_again"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/no_fleets"
                    android:background="@color/pickup_button_enabled_background"
                    android:text="TRY AGAIN"
                    android:onClick="tryAgain"
                    android:textSize="20dp"
                    android:layout_alignLeft="@+id/no_fleets"
                    android:layout_alignStart="@+id/no_fleets"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <!-- The navigation drawer -->


    <include layout="@layout/left_side_menu" />

</android.support.v4.widget.DrawerLayout>





