<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/receiverDetailsCardView"
            android:layout_width="354dp"
            android:layout_height="wrap_content"
            android:background="@drawable/src_dst_border"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            app:contentPaddingTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            card_view:cardCornerRadius="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/locationViewSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:onClick="updownSelectionOnClick"
                        app:srcCompat="@drawable/up_down_selector"
                        android:background="@null"/>

                    <RelativeLayout
                        android:id="@+id/src_dst_long"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/picup_loc_long"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true">

                            <ImageView
                                android:id="@+id/imageButtonSrc"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_alignParentBottom="true"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                app:srcCompat="@drawable/source_img" />

                            <View
                                android:id="@+id/v_separator_picup"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/imageButtonSrc"
                                android:background="@color/separator_color" />

                            <TextView
                                android:id="@+id/pick_loc_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/v_separator_picup"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="PICKUP LOCATION"
                                android:inputType="textNoSuggestions"
                                android:textColor="@color/Source_dest_font"
                                android:textColorHint="@android:color/holo_orange_light"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/pick_loc_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/pick_loc_key"
                                android:layout_below="@id/pick_loc_key"
                                android:layout_marginTop="5dp"
                                android:text="TextView" />

                        </RelativeLayout>

                        <View
                            android:id="@+id/sep_h_src_dst"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/picup_loc_long"
                            android:background="@color/separator_color" />

                        <RelativeLayout
                            android:id="@+id/search_dst_box"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_below="@id/picup_loc_long">

                            <ImageView
                                android:id="@+id/imageButtonDst"
                                android:layout_width="34dp"
                                android:layout_height="34dp"
                                android:layout_alignParentTop="true"
                                android:drawablePadding="5dp"
                                android:gravity="top"
                                app:srcCompat="@drawable/dest_img" />

                            <View
                                android:id="@+id/v_separator_drop"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="20dp"
                                android:layout_toRightOf="@id/imageButtonDst"
                                android:background="@color/separator_color" />

                            <TextView
                                android:id="@+id/dest_loc_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="2dp"
                                android:layout_toRightOf="@id/v_separator_drop"
                                android:backgroundTint="@android:color/transparent"
                                android:hint="DROP LOCATION"
                                android:inputType="textNoSuggestions"
                                android:textColor="@color/Source_dest_font"
                                android:textColorHint="@android:color/holo_orange_light"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/dest_loc_val"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/dest_loc_key"
                                android:layout_below="@id/dest_loc_key"
                                android:layout_marginTop="5dp"
                                android:text="TextView" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/pickupLocationDetails"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_below="@id/src_dst_long"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/locationImageView"
                            android:layout_width="20dp"
                            android:layout_height="31dp"
                            app:srcCompat="@drawable/marker_green" />

                        <View
                            android:id="@+id/separator"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/locationImageView"
                            android:background="@color/separator_color" />

                        <TextView
                            android:id="@+id/pickupLocationKey"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/separator"
                            android:text="PICKUP LOCATION" />

                        <TextView
                            android:id="@+id/pickupLocationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/pickupLocationKey"
                            android:layout_below="@id/pickupLocationKey"
                            android:layout_marginTop="5dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="location" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separator1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/pickupLocationDetails"
                        android:background="@color/separator_color" />

                    <RelativeLayout
                        android:id="@+id/driverDetails"
                        android:layout_width="match_parent"
                        android:layout_height="74dp"
                        android:layout_below="@id/separator1"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp">

                        <ImageView
                            android:id="@+id/driverImageView"
                            android:layout_width="50dp"
                            android:layout_height="40dp"
                            app:srcCompat="@drawable/driver_selected_profile_pic" />

                        <TextView
                            android:id="@+id/driverName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/driverImageView"
                            android:text="driver name" />

                        <TextView
                            android:id="@+id/vehicleRegistrationNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/driverName"
                            android:layout_below="@id/driverName"
                            android:layout_marginTop="5dp"
                            android:text="DL 2CA 2386" />

                        <ImageView
                            android:id="@+id/callDriverImage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignBottom="@+id/vehicleRegistrationNo"
                            android:layout_alignParentRight="true"
                            android:onClick="callDriver"
                            app:srcCompat="@drawable/call_driver" />

                        <TextView
                            android:id="@+id/callDriverValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@id/callDriverImage"
                            android:layout_below="@id/callDriverImage"
                            android:layout_marginTop="3dp"
                            android:onClick="callDriver"
                            android:text="Call Driver"
                            android:textSize="8sp" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/separator2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/driverDetails"
                        android:background="@color/separator_color" />

                    <RelativeLayout
                        android:id="@+id/price_dist_view"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@id/separator2"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="INR 450"
                            android:textColor="@color/src_dst_border_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="6.5 KM"
                            android:textColor="@color/src_dst_border_color"
                            android:textSize="20sp" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/separator3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/price_dist_view"
                        android:background="@color/separator_color" />

                    <RelativeLayout
                        android:id="@+id/payment_mode_cancel_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_below="@+id/price_dist_view"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/payment_mode_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="Mode of Payment"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/payment_mode_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/payment_mode_key"
                            android:text="Cash"
                            android:textSize="20sp" />

                        <View
                            android:id="@+id/separator5"
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:background="@color/separator_color" />

                        <ImageButton
                            android:id="@+id/cancel_button"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:onClick="cancelTrip"
                            app:srcCompat="@drawable/ic_cancel_trip"
                            android:tag="0"
                            android:layout_marginRight="103dp"/>

                        <TextView
                            android:id="@+id/trip_cancel_key"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:text="Cancel Trip"
                            android:textSize="16sp" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/statusLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_below="@+id/locationViewSmall"
                    android:background="@color/separator_color"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/status_loading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="LOADING"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/status_inprogress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="ON TRIP"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/status_unloading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UNLOADING"
                        android:textAlignment="center"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/status_arrived"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="ARRIVED AT PICK-UP LOCATION"
                        android:textColor="#765267"
                        android:textSize="16sp"
                        android:visibility="gone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:background="#ffc719" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <!-- The navigation drawer -->


    <include layout="@layout/left_side_menu" />

</android.support.v4.widget.DrawerLayout>
