<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="150dp" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <EditText
                android:id="@+id/search_src"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/source_dest_bg"
                android:hint="Pickup Location"
                android:textColor="@color/Source_dest_font"
                android:textColorHint="@android:color/holo_orange_light"
                android:textSize="12sp"></EditText>

            <EditText
                android:id="@+id/search_dst"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/search_src"
                android:background="@color/source_dest_bg"
                android:hint="Enter Drop Location"
                android:textColor="@color/Source_dest_font"
                android:textColorHint="@android:color/holo_orange_light"
                android:textSize="12sp"></EditText>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/receiverDetailsCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@android:color/white"
            app:contentPadding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"
            card_view:cardCornerRadius="0dp">

            <RelativeLayout
                android:id="@+id/receiverDetailsView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="bottom"
                android:paddingTop="50px"
                tools:layout_editor_absoluteY="8dp"
                tools:layout_editor_absoluteX="8dp">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receiver's Details"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/receiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/message"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px" />

                <EditText
                    android:id="@+id/receiverPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiverName"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20px"
                    android:hint="Phone Number"
                    android:layout_marginRight="20px"
                    android:ems="10"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_below="@id/receiverPhone"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:hint="Phone Number"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:onClick="makeVehicleRequest"/>
            </RelativeLayout>


