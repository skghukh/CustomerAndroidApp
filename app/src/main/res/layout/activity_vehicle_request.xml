<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="175dp" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.MapFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

            <EditText
                android:id="@+id/search_src"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/source_dest_bg"
                android:hint="Pickup Location"
                android:textColor="@color/Source_dest_font"
                android:textColorHint="@android:color/holo_orange_light"
                android:textSize="12sp"></EditText>

            <EditText
                android:id="@+id/search_dst"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/search_src"
                android:background="@color/source_dest_bg"
                android:hint="Enter Drop Location"
                android:textColor="@color/Source_dest_font"
                android:textColorHint="@android:color/holo_orange_light"
                android:textSize="12sp"></EditText>

        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:id="@+id/receiverDetailsCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardBackgroundColor="@android:color/white"
            app:contentPadding="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            card_view:cardCornerRadius="0dp">

            <RelativeLayout
                android:id="@+id/receiverDetailsView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="bottom"
                android:paddingTop="50px"
                android:visibility="gone"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp">

                <TextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:text="Receiver's Details"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/receiverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/message"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:ems="10"
                    android:hint="Full Name"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/receiverPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiverName"
                    android:layout_marginLeft="20px"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Phone Number"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/receiverPhone"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:layout_marginTop="10dp"
                    android:hint="Phone Number"
                    android:onClick="showVehicleTypes"
                    android:text="Next" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/selectVehicleType"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:visibility="visible">

                <Button
                    android:id="@+id/nextButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15px"
                    android:layout_marginRight="15px"
                    android:onClick="makeVehicleRequest"
                    android:text="Next" />

                <LinearLayout
                    android:id="@+id/vehicle_lists_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/nextButton2"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:onClick="selectVehicleType"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imageViewSmall"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            app:srcCompat="@drawable/vehicle_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/imageViewSmall"
                            android:layout_marginTop="20dp"
                            android:layout_centerHorizontal="true"
                            android:text="Small Load" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:onClick="selectVehicleType"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imageViewMedium"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            app:srcCompat="@drawable/vehicle_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/imageViewMedium"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="Medium Load" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:onClick="selectVehicleType"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/imageViewLarge"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            app:srcCompat="@drawable/vehicle_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/imageViewLarge"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:text="Large Load" />

                    </RelativeLayout>
                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <!-- The navigation drawer -->
    <include layout="@layout/left_side_menu" />

