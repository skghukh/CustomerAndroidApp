<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="260dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="@color/view_background_white">

    <RelativeLayout
        android:id="@+id/driverView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@color/view_background_yellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/driverThumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/user_thumbnail" />

        <TextView
            android:id="@+id/name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Shailendra Verma"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/text_medium"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/driverThumbnail"/>


    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#E5E5E5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuItems" />


    <TextView
        android:id="@+id/menu_contact_roda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Contact Roda"
        android:textColor="#a7a7a7"
        android:textSize="@dimen/text_large"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/menu_terms" />

    <TextView
        android:id="@+id/menu_terms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingLeft="20dp"
        android:text="Terms and Conditions"
        android:textColor="#a7a7a7"
        android:textSize="@dimen/text_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/menuItems"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverView">

        <TextView
            android:id="@+id/menu_trip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:text="Trips"
            android:textColor="#1C0113"
            android:textSize="@dimen/text_large"
            android:onClick="showTrips"/>

        <TextView
            android:id="@+id/menu_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/menu_trip"
            android:padding="10dp"
            android:text="Pay by"
            android:textColor="#1C0113"
            android:textSize="@dimen/text_large"
            />

        <Switch
            android:id="@+id/paySwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/menu_payment"
            android:switchMinWidth="56dp"
            android:textOff="CASH"
            android:textOn="WALLET" />


        <TextView
            android:id="@+id/menu_vehicle_rates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paySwitch"
            android:padding="10dp"
            android:text="Vehicle and Rates"
            android:textColor="#1C0113"
            android:textSize="@dimen/text_large"
            android:onClick="showVehicleRates"/>

        <TextView
            android:id="@+id/menu_favourites"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_vehicle_rates"
            android:padding="10dp"
            android:text="Favourites"
            android:textColor="#1C0113"
            android:textSize="@dimen/text_large"
            android:onClick="showFavourites"/>

        <TextView
            android:id="@+id/menu_invite_friends"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_favourites"
            android:padding="10dp"
            android:text="Invite friends"
            android:textColor="#1C0113"
            android:textSize="@dimen/text_large"
            android:onClick="inviteFriends"/>


        <TextView
            android:id="@+id/menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/menu_invite_friends"
            android:padding="10dp"
            android:text="Settings"
            android:textColor="#1C0113"
            android:textSize="@dimen/text_large"
            android:onClick="showSettings"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>